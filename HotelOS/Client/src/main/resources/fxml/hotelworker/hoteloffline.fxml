<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root prefHeight="690.0" prefWidth="850.0" styleClass="panel" stylesheets="@../../css/hotelworker/hotelworkerstyle.css" type="Pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.hotelworkerui.hotelworkercontroller.UpdateOfflinePaneController">
    <children>
        <HBox id="topBar" prefHeight="50.0" prefWidth="850.0" stylesheets="@../../css/user/userstyle.css">
            <children>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../img/hotelworker/initialPhoto.png" />
                    </image>
                    <HBox.margin>
                        <Insets left="480.0" top="10.0" />
                    </HBox.margin>
                </ImageView>
                <SplitMenuButton maxWidth="120.0" mnemonicParsing="false" text="name">
                    <items>
                        <MenuItem mnemonicParsing="false" text="退出登录" />
                    </items>
                    <HBox.margin>
                        <Insets left="10.0" top="8.0" />
                    </HBox.margin>
                </SplitMenuButton>
                <Button fx:id="minWindowBtn" mnemonicParsing="false" onAction="#minWindow">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../img/common/minimize.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets left="60.0" top="5.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="closeWindowBtn" mnemonicParsing="false" onAction="#closeWindow">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../img/common/exit.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
      <ComboBox fx:id="roomTypeBox" layoutX="297.0" layoutY="341.0" prefHeight="36.0" prefWidth="100.0" promptText="单人房" />
      <Label layoutX="225.0" layoutY="347.0" text="类型：" />
      <ComboBox fx:id="roomAmountBox" layoutX="525.0" layoutY="341.0" prefHeight="36.0" prefWidth="100.0" promptText="1" />
      <Label layoutX="446.0" layoutY="347.0" text="数量：" />
      <Button fx:id="checkInBtn" layoutX="565.0" layoutY="450.0" mnemonicParsing="false" onAction="#checkIn" prefHeight="24.0" prefWidth="60.0" text="入住" />
      <Button fx:id="checkOutBtn" layoutX="535.0" layoutY="450.0" mnemonicParsing="false" onAction="#checkOut" text="退房" visible="false" />
      <Label layoutX="225.0" layoutY="271.0" text="线下已入住客房间数：" />
      <Label fx:id="busyRoomLabel" layoutX="424.0" layoutY="271.0" text="12" />
      <Label layoutX="455.0" layoutY="271.0" text="间" />
    </children>
</fx:root>

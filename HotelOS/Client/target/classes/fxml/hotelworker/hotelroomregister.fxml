<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root prefHeight="690.0" prefWidth="850.0" styleClass="panel" stylesheets="@../../css/hotelworker/hotelworkerstyle.css" type="Pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.hotelworkerui.hotelworkercontroller.RegisterRoomPaneController">
    <children>
        <HBox id="topBar" prefHeight="50.0" prefWidth="850.0" stylesheets="@../../css/user/userstyle.css">
            <children>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../img/hotelworker/initialPhoto.png" />
                    </image>
                    <HBox.margin>
                        <Insets left="480.0" top="10.0" />
                    </HBox.margin>
                </ImageView>
                <SplitMenuButton maxWidth="120.0" mnemonicParsing="false" text="name">
                    <items>
                        <MenuItem mnemonicParsing="false" text="退出登录" />
                    </items>
                    <HBox.margin>
                        <Insets left="10.0" top="8.0" />
                    </HBox.margin>
                </SplitMenuButton>
                <Button mnemonicParsing="false">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../img/common/minimize.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets left="60.0" top="5.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../img/common/exit.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
      <VBox layoutX="45.0" layoutY="165.0">
         <children>
              <TableView id="listTable" fx:id="roomTable" layoutX="125.0" layoutY="164.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="324.0" prefWidth="760.0">
                  <columns>
                      <TableColumn id="idCol" fx:id="typeCol" editable="false" prefWidth="250.0" text="客房类型" />
                      <TableColumn id="userCol" fx:id="amountCol" editable="false" prefWidth="220.0" text="数量" />
                      <TableColumn id="amountCol" fx:id="priceCol" editable="false" prefWidth="288.0" text="原价（元/天）" />
                  </columns>
              </TableView>
              <HBox id="listTopBar" alignment="CENTER_RIGHT" layoutX="125.0" layoutY="364.0" prefHeight="50.0" prefWidth="600.0">
               <children>
                  <HBox fx:id="addHBox" alignment="CENTER_LEFT" visible="false">
                     <children>
                        <ComboBox fx:id="roomBox" prefHeight="36.0" prefWidth="140.0" promptText="客房类型" />
                        <Label text="数量：">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="roomAmountField" prefWidth="50.0">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </TextField>
                        <Label layoutX="150.0" layoutY="23.0" text="原价：">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="roomPriceField" alignment="CENTER" layoutX="204.0" layoutY="17.0" prefHeight="36.0" prefWidth="102.0">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </TextField>
                        <Label layoutX="248.0" layoutY="23.0" text="元/天">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <Pane>
                     <children>
                        <Button fx:id="modifyBtn" layoutX="70.0" layoutY="7.0" mnemonicParsing="false" onAction="#modifyRoom" text="修改">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="deleteBtn" layoutX="140.0" layoutY="7.0" mnemonicParsing="false" onAction="#deleteRoom" text="删除">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="addBtn" layoutY="7.0" mnemonicParsing="false" onAction="#addRoom" text="添加">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button id="saveRegisterBtn" fx:id="confirmBtn" layoutX="32.0" layoutY="7.0" mnemonicParsing="false" onAction="#confirmAdd" text="确认" visible="false" />
                        <Button id="cancelRegisterBtn" fx:id="cancelBtn" layoutX="111.0" layoutY="7.0" mnemonicParsing="false" onAction="#cancelAdd" text="取消" visible="false" />
                     </children>
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </Pane>
               </children>
              </HBox>
         </children>
      </VBox>
    </children>
</fx:root>
